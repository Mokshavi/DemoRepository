<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
	   http://www.springframework.org/schema/beans/spring-beans.xsd" 
	   default-init-method="ginit" default-destroy-method="gdestroy">
     	
<!-- by default when a bean is created it will be singleton -->
<bean id="defaultHello" class="com.training.basics.DefaultHello" >
<!-- the data can be supplied to the bean either witha setter r constructor -->
<property name="name" value="Rama"></property>
<property name="city" value="Bangalore"></property>
</bean>

</beans>